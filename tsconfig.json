{
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/assets/*": ["./assets/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "jsx": "react-native",
    "isolatedModules": true
  },
  "include": [
    "declarations.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app.tsx",
    "app/_layout.tsx",
    "app/index.tsx"
, "app/Splash/index.tsx"  ]
}
